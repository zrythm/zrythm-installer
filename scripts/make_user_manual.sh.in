set -e

out_file="$1"

zrythm_src_tarball="$2"
zrythm_src_tarball_filename="$3"
lang="$4"
private_dir="$5"

rm -rf $private_dir
mkdir -p $private_dir

inner_dir="@ZRYTHM_INNER_DIR_NAME@"

latex_build_dir=build/doc/user/_build/$lang/latex

cp $zrythm_src_tarball $private_dir/

# build manuals
pushd $private_dir
tar xf $zrythm_src_tarball_filename
pushd $inner_dir
python -m venv venv
source ./venv/bin/activate
pip install -r requirements.txt
cmake -B build -DZRYTHM_USER_MANUAL=ON
sed -i -e 's/latexpdf/latex/' doc/user/CMakeLists.txt
# run twice because pt fails for some reason
cmake --build build --target latex-manual-$lang || cmake --build build --target latex-manual-$lang
deactivate
make -C $latex_build_dir
popd
popd

cp $private_dir/$inner_dir/$latex_build_dir/Zrythm.pdf \
  $out_file
